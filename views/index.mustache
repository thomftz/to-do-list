<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="main.css">
    <title></title>
  </head>
  <body>
    <div class="container">
<!-- Build the To Do list form -->
      <form id="to-do" action="/" method="post">
        <input type="text" name="item" placeholder="to do...">
        <label for="priority">Priority</label>
        <select class="" name="priority" form="to-do">
          <option value="high">High </option>
          <option value="medium">Medium</option>
          <option value="low">Low </option>
        </select>
        <button type="submit" name="button">Do it!</button>
      </form>

<!-- Display the To Do list items with no errors -->
      <div class="todos">
        <ul>
        {{#todoList}}{{^errors}}
          <li id="{{priority}}"><input type="checkbox" {{checked}}>  {{item}}</li>
        {{/errors}}{{/todoList}}
        </ul>
      </div>

<!-- Display an Error with no To Do list items -->
      {{#errors}}
      <div class="error">
        {{ msg }}<br />
      </div>
      {{/errors}}

    </div>
  </body>
</html>
